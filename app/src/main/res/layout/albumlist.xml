<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/transparent_bg"
    app:cardCornerRadius="2dp">
    <RelativeLayout
        android:id="@+id/gridViewItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gridViewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_art"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/gridViewTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridViewImage">

            <LinearLayout
                android:id="@+id/linear_layout_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.reyansh.audio.audioplayer.free.Views.TextViewPlus
                    android:id="@+id/gridViewTitleText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Title Text"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <com.reyansh.audio.audioplayer.free.Views.TextViewPlus
                    android:id="@+id/gridViewSubText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Subtext"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>